<UserControl x:Class="IntGraphLab8.Job"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntGraphLab8"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBoxRecipe" Grid.Column="1" Margin="5,0,0,0"/>
        <StackPanel Grid.Column="0">
            <Button x:Name="ButtonOpenRecipe" Content="Ouvrir recette" Margin="0,5,0,0" Click="ButtonOpenRecipe_Click"/>
            <Button x:Name="ButtonEditRecipe" Content="Editeur de recette" Margin="0,5,0,0" IsEnabled="False"/>
            <Button x:Name="ButtonExecute" Content="Executer" Margin="0,50,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
